{
  "build": {
    "copyright": "Luis Tronilo dev ITSupport.",
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "tronilo53",
        "repo": "ADManagement",
        "private": true
      }
    },
    "asar": false,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "removeDefaultUninstallWelcomePage": false,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "shortcutName": "ADManagement",
      "runAfterFinish": false,
      "include": "build/customInstaller.nsh"
    }
  },
  "name": "ADManagement",
  "version": "1.0.1",
  "main": "main.mjs",
  "type": "module",
  "license": "MIT",
  "description": "ITSupport program for the management of AD",
  "author": "Luis TM - ITSupport",
  "scripts": {
    "ng": "ng",
    "start": "electron .",
    "build": "ng build && electron-builder",
    "build:p": "ng build && electron-builder -p always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.3",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@ng-bootstrap/ng-bootstrap": "^17.0.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^5.3.0",
    "jquery": "^3.7.1",
    "material-symbols": "^0.20.0",
    "popper.js": "^1.16.1",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primeng": "^17.18.1",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.11.1",
    "tslib": "^2.3.0",
    "xml2js": "^0.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.4",
    "@angular/cli": "^18.0.4",
    "@angular/compiler-cli": "^18.0.0",
    "@dotenvx/dotenvx": "^0.45.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2"
  }
}
